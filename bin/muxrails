#!/bin/bash

set -e
set -o pipefail

if [[ -z "$TMUX" ]]; then
  if command -v tat > /dev/null; then
    echo "tmux not running, use 'tat' to start"
  else
    echo "tmux not running"
  fi

  exit 1
fi

tmux rename-window editor
tmux split-window -d -h -l 80
tmux split-window -d -b -l 10

tmux set-hook -w -t editor window-resized 'resize-pane -t 0 -y 10 ; resize-pane -t 2 -x 80'

tmux send-keys -t editor "$EDITOR" Enter

tmux new-window -d -n console
tmux new-window -d -n db

tmux new-window -d -n servers
tmux split-window -d -t servers

tmux new-window -d -n prod
tmux split-window -d -t prod
tmux send-keys -t prod.0 'production pg:psql ORANGE'
tmux send-keys -t prod.1 'prodc'

tmux new-window -d

if [[ -x "bin/spring" ]]; then
  tmux new-window -d -n spring
  tmux send-keys -t spring 'deve bin/spring server' Enter
  sleep 0.5
fi

if [[ -x "bin/rails" ]]; then
  tmux send-keys -t console 'deve bin/rails console' Enter
  tmux send-keys -t db 'deve bin/rails db' Enter
fi

if [[ -x "script/server" ]]; then
  tmux send-keys -t servers.0 'deve script/server' Enter
fi
