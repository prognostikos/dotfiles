#!/bin/bash -e
# print the remaining charge on a macbook

if command -v pmset > /dev/null; then
  batt_info=$(pmset -g 'batt')
  percent=$(echo "$batt_info" | tr '\n' ';' | awk '{print $8}' | tr -d ';')
  if echo "$batt_info" | grep -q 'discharging'; then
    echo "$percent"
  else
    echo "âš¡${percent}"
  fi
else
  echo '!'
fi
