# shellcheck shell=bash
if ls --color=auto &> /dev/null; then
  alias ls="ls -F --color=auto"
else
  alias ls="ls -F"
fi

alias vj="${EDITOR:-vim} ~/d/journal.md.pgp"
alias vw="${EDITOR:-vim} ~/d/wiki/index.md"
alias wj="${EDITOR:-vim} -c :WikiJournal"

alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias n=nvim
alias cal="cal -3Nw"

if [ -f ~/.netrc.gpg ]; then
  alias curl="gpg --batch -q -d ~/.netrc.gpg | curl --netrc-file /dev/stdin"
fi

ag() {
  echo "Use rg instead!" >&2
  sleep 0.5
  command ag "$@"
}

yolo() {
  if [ -z "$RUNNING_IN_DEVCONTAINER" ]; then
    echo "Nope. Run me in a devcontainer." >&2
  else
    claude --dangerously-skip-permissions
  fi
}
