[user]
	name = Matt Rohrer
	email = matt@prognostikos.com
	signingkey = B3098CF843B4FC0A36B787751E3668A2A42B3FC3
[core]
	excludesfile = ~/.gitignore
	precomposeunicode = true
	autocrlf = input
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
	unstage = reset HEAD
	uncommit = reset --soft HEAD^
	ctags = !.git/hooks/ctags
	unpushed = log --branches --not --remotes --simplify-by-decoration --decorate --oneline
	wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
	save = !git add -A && git commit -m 'SAVEPOINT'
	wip = !git add -u && git commit -m 'WIP'
	up = !git pull --rebase --prune $@ && git submodule update --init --recursive
	stash-all = stash save --include-untracked
# some goodies from http://yanpritzker.com/git-book/
[color]
	ui = auto
[merge]
	; conflictstyle = zdiff3
	tool = nvim
	ff = only
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[gc]
	auto = 1
	reflogexpire = never
	reflogexpireunreachable = never
[branch]
	autosetuprebase = always
	sort = -committerdate
[mergetool]
	keepBackup = false
	prompt = false
[mergetool "nvim"]
	cmd = nvim -d $LOCAL $MERGED $REMOTE
[github]
	user = prognostikos
[diff]
	tool = nvim
	noprefix = true
	algorithm = histogram
	colorWords = true
	wordRegex = \\w+|.
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[difftool]
	prompt = false
[init]
	templatedir = ~/.git-template
	defaultBranch = main
[push]
	followTags = true
	autoSetupRemote = true
[status]
	showUntrackedFiles = all
[rerere]
	enabled = true
	autoupdate = true
[credential]
	helper = osxkeychain
[ghi]
	token = !security find-internet-password -a prognostikos -s github.com -l 'ghi token' -w
[commit]
	gpgsign = true
	verbose = true
[gpg]
	program = gpg
[transfer]
	fsckobjects = true
[fetch]
	fsckobjects = false
	prune = true
	pruneTags = true
	all = true
[column]
	ui = auto
[tag]
	sort = version:refname
[help]
	autocorrect = prompt
[pull]
	rebase = true
