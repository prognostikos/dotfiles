unless defined? ETC_IRBRC_LOADED
  require "rubygems"

  require "irb/completion"

  IRB.conf[:SAVE_HISTORY] = 500
  IRB.conf[:HISTORY_FILE] = File.expand_path("~/.irb_history")

  begin
    require "interactive_editor"
  rescue LoadError
  end

  begin
    require "hirb"
    Hirb.enable
  rescue LoadError
  end

  ETC_IRBRC_LOADED = true
end
